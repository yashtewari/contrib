# Enable the Authz PAM module
# At image build time, the value of HOST_UUID is replaced with the role of the image (for example, webapp)
auth required /lib/security/pam_authz.so url=http://opa:8181 authz_rule_endpoint=/v1/data/common/authz display_rule_endpoint=/v1/data/common/display pull_rule_endpoint=/v1/data/common/pull

session    required   pam_env.so readenv=1 user_readenv=0
session    required   pam_env.so readenv=1 envfile=/etc/default/locale user_readenv=0